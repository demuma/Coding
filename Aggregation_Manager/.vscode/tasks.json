{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".", "-B", "build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_PREFIX_PATH=/opt/homebrew/opt"
      ]
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "dependsOn": "Configure Debug",
      "command": "cmake",
      "args": ["--build", "build", "--parallel"],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Configure Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".", "-B", "build",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_PREFIX_PATH=/opt/homebrew/opt"
      ]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "dependsOn": "Configure Release",
      "command": "cmake",
      "args": ["--build", "build", "--parallel"],
      "group": "build"
    }
  ]
}